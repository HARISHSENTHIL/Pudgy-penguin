# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Device Configuration
DEVICE=cuda
DTYPE=bfloat16

# Model Paths
FLUX_MODEL=black-forest-labs/FLUX.1-dev
LORA_ID=creatorchain/Pudgy_2.0
COGVIDEO_MODEL=THUDM/CogVideoX-5b-I2V

# Generation Defaults
DEFAULT_LORA_SCALE=0.8
DEFAULT_IMAGE_WIDTH=720
DEFAULT_IMAGE_HEIGHT=480
DEFAULT_IMAGE_STEPS=25
DEFAULT_IMAGE_GUIDANCE=3.5

DEFAULT_NUM_FRAMES=49
DEFAULT_VIDEO_STEPS=50
DEFAULT_VIDEO_GUIDANCE=6.0

DEFAULT_GIF_FPS=10
DEFAULT_GIF_WIDTH=640

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Worker Configuration
WORKER_CHECK_INTERVAL=5  # seconds
WORKER_CONCURRENCY=1  # Number of jobs to process in parallel (1-5 recommended, depends on GPU VRAM)

# Database Configuration
DATABASE_URL=sqlite:///./pudgy_jobs.db

# Output Directory
OUTPUT_DIR=./pudgy_outputs
